#! /bin/sh

make -s

for test in 10000 100000 1000000 10000000
do
    echo "Checking time for test $test"
    echo "-----------------------------------"
    time mpirun -mca btl_tcp_if_include eth0 --hostfile Hostfiles/hosts4 FaultTolerant ../Tests/$test/$test.a ../Tests/$test/$test.b Parallel
    rm hist.a hist.b hist.c result.out
    echo
done
